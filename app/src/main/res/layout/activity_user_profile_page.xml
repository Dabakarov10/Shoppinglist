<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".UserProfilePage">


    <TextView
        android:id="@+id/caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="הפרטים שלי"
        android:textColor="#4267B2"
        android:textSize="35dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/TextSighUp_Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:ems="11"
        android:text="שם משתמש: "
        android:textSize="20dp" />

    <TextView
        android:id="@+id/TextSighUp_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="11"
        android:text="סיסמא: "
        android:textSize="20dp" />

    <TextView
        android:id="@+id/TextSighUp_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="11"
        android:text="דואר אלקטרוני: "
        android:textSize="20dp" />

    <TextView
        android:id="@+id/TextSighUp_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="11"
        android:text="מספר טלפון: "
        android:textSize="20dp" />


</LinearLayout>